<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="17dp">

    <TextView
        android:id="@+id/user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 66"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/oagothic_medium"
        android:textStyle="bold"
        android:elevation="6dp"/>

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="박기현이당"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/oagothic_medium"
        android:elevation="6dp"/>

    <ImageView
        android:id="@+id/user_char_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/chickegg"
        android:elevation="6dp"/>


    <TextView
        android:id="@+id/user_exp_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="66.5%"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:fontFamily="@font/oagothic_medium"
        android:elevation="6dp"/>

    <ProgressBar
        android:id="@+id/user_exp_bar"
        android:layout_width="100dp"
        android:layout_height="12dp"
        android:progressDrawable="@drawable/custom_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="100"
        android:layout_marginTop="112dp"
        android:layout_marginLeft="10dp"
        android:elevation="6dp"
        />

    <ImageView
        android:id="@+id/user_planet_img"
        android:layout_width="165dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_back_blue" />

</FrameLayout>