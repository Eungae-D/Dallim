<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp">

    <LinearLayout
        android:id="@+id/btn_single"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:background="@drawable/round_check_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_multi"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/single_gif"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="혼자 달리기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_multi"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:background="@drawable/round_check_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_single"
        app:layout_constraintBottom_toTopOf="@id/btn_my_record">

        <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/two_rabbit" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="함께 달리기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_my_record"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:background="@drawable/round_check_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_multi"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:src="@drawable/penguin" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="나의 기록 보기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_setting"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:background="@drawable/round_check_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_multi"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:src="@drawable/penguin" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="설정"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>