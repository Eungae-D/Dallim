{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "paths": {
      "@/recoil/*": ["./src/recoil/*"],
      "@/apis/*": ["./src/apis/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/components/*": ["./src/components/*"],
      "@/screens/*": ["./src/screens/*"],
    },
    "types": ["styled-components-react-native"]
  },
  "include": ["./src/**/*", "./declarations.d.ts"]
}
